scalar Time

extend type Query {
    toolRepairRecords: [ToolRepairRecord]
    toolRepairRecord(id: ID!): ToolRepairRecord
}

extend type Mutation {
    createToolRepairRecord(
        createToolRepairRecordInput: CreateToolRepairRecordInput
    ): ToolRepairRecord
}

type ToolRepairRecord {
    id: ID!
    dateStarted: Time
    dateEnded: Time
    repairDescription: String
    malfunctionDescription: String
    deadlineDate: Time
    material: String
    timeSpent: Int 
    externalServices: String
    note: String
    tool: Tool
    user: User
}

input CreateToolRepairRecordInput {
    dateStarted: Time
    dateEnded: Time
    repairDescription: String
    malfunctionDescription: String
    deadlineDate: Time
    material: String
    timeSpent: String
    externalServices: String
    note: String
    user: ID
}
